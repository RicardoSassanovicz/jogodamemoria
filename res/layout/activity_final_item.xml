<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip" >

    <ImageView
        android:id="@+id/icon_Categoria"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:contentDescription="TODO"
        android:src="@drawable/pineapple" />

    <TextView
        android:id="@+id/DescricaoDoItemBR"
        android:layout_width="wrap_content"
        android:layout_height="26dip"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="Description"
        android:textSize="12sp"
        android:layout_alignTop="@+id/DescricaoDoItemUS"
        android:layout_alignLeft="@+id/textView2" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:gravity="center_vertical"
        android:text="English US"
        android:textSize="16sp"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/icon_Categoria"
        android:layout_toRightOf="@+id/icon_Categoria"
        android:layout_marginLeft="19dp" />

    <TextView
        android:id="@+id/DescricaoDoItemUS"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="Description"
        android:textSize="12sp"
        android:layout_alignBottom="@+id/icon_Categoria"
        android:layout_alignLeft="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:gravity="center_vertical"
        android:text="Portugues BR"
        android:textSize="16sp"
        android:id="@+id/textView2"
        android:layout_marginRight="22dp"
        android:layout_alignTop="@+id/textView"
        android:layout_alignRight="@+id/textView" />



</RelativeLayout> 